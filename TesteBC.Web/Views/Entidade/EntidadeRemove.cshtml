@model TesteBC.Web.Models.EntidadeModel

@{
    ViewData["Title"] = "Remover Entidade";
}

<h1>Remover Entidade</h1>

<h3>Deseja realmente remover esse registro?</h3>
<div>

    <form asp-action="EntidadeRemove">
        <dl class="row">
            <dt class="col-sm-2"style="display: none">
                @Html.DisplayNameFor(model => model.idEntidade)
            </dt>
            <dd class="col-sm-10"style="display: none">
                @Html.DisplayFor(model => model.idEntidade)
                <input asp-for="idEntidade" class="form-control" style="display: none" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.nome)
                <input asp-for="nome" class="form-control" style="display: none" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.flPessoaFisica)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.flPessoaFisica)
                <input asp-for="flPessoaFisica" class="form-control" style="display: none" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.tipoPessoa)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.tipoPessoa)
                <input asp-for="tipoPessoa" class="form-control" style="display: none" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.documento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.documento)
                <input asp-for="documento" class="form-control" style="display: none" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.flAtivo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.flAtivo)
                <input asp-for="flAtivo" class="form-control" style="display: none" />
            </dd>
        </dl>
        <h3>Removendo a entidade, você removerá também TODOS os lançamentos atribuídos a ela.</h3>

        <input type="submit" value="Remover" class="btn btn-danger" /> 
        <br />
        <br />
        <a asp-action="EntidadeLista">Voltar</a>
    </form>
</div>
